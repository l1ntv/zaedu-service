<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="Vadim Lint">
        <createTable tableName="user_statuses">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints primaryKey="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="v1-2" author="Vadim Lint">
        <preConditions>
            <not>
                <tableIsEmpty tableName="user_statuses"/>
            </not>
        </preConditions>
        <loadData tableName="user_statuses" file="db/data/user-statuses-data.csv"/>
    </changeSet>

</databaseChangeLog>