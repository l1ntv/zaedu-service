<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
    <changeSet id="v1-create-master_main_images" author="Vadim Duz">
        <createTable tableName="master_main_images">
            <column name="main_image_id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="master_id" type="bigint"/>
            <column name="url" type="varchar(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="master_main_images"
                                 baseColumnNames="master_id"
                                 constraintName="fk_main_images_master"
                                 referencedTableName="master_profile"
                                 referencedColumnNames="master_id"/>
    </changeSet>
    <changeSet id="v1-insert-data-master_main_images" author="Vadim Duz">
        <preConditions>
            <not>
                <tableIsEmpty tableName="master_main_images"/>
            </not>
        </preConditions>
        <loadData tableName="master_main_images"
                  file="db/data/master-main-images-data.csv"/>
    </changeSet>
</databaseChangeLog>